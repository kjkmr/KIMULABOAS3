package jp.starryworks.display {		import flash.display.Sprite;	import flash.display.BitmapData;		/*--------------------------------------------------	* 矩形のグラフィックを描画するクラス	--------------------------------------------------*/	public class RectangleSprite extends Sprite {		/*--------------------------------------------------		* プロパティ		--------------------------------------------------*/		private var _color:uint;		private var _bitmapData:BitmapData;		private var _width:Number;		private var _height:Number;				/*--------------------------------------------------		* コンストラクタ		--------------------------------------------------*/		public function RectangleSprite( i_fill:* = 0xffffff, i_width:uint = 1, i_height:uint = 1 ) {						//			_width = i_width;			_height = i_height;						//			if ( i_fill is BitmapData ) bitmapData = i_fill;			else color = i_fill;					}				/*--------------------------------------------------		* colorプロパティ		--------------------------------------------------*/		public function get color():uint { return _color; }		public function set color( i_value:uint ):void {			_color = i_value;			_bitmapData = null;			//描画			graphics.clear();			graphics.beginFill(_color);			graphics.drawRect( 0, 0, 1, 1 );			graphics.endFill();			super.width = _width;			super.height = _height;		}				/*--------------------------------------------------		* bitmapプロパティ		--------------------------------------------------*/		public function get bitmapData():BitmapData { return _bitmapData; }		public function set bitmapData( i_value:BitmapData ):void {						_bitmapData = i_value;			//描画			graphics.clear();			graphics.beginBitmapFill( _bitmapData );			graphics.drawRect( 0, 0, _width, _height );			graphics.endFill();			scaleX = scaleY = 1;		}				/*--------------------------------------------------		* width / heightプロパティ		--------------------------------------------------*/				public override function set width( i_value:Number ):void {			_width = i_value;			if ( _bitmapData ) bitmapData = _bitmapData;			else super.width = _width;		}				public override function set height( i_value:Number ):void {			_height = i_value;			if ( _bitmapData ) bitmapData = _bitmapData;			else super.height = _height;		}			}}