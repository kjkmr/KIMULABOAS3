package {		import flash.display.Sprite;	import flash.system.ApplicationDomain;	import flash.display.BitmapData;	import flash.utils.getQualifiedSuperclassName;		/*--------------------------------------------------	* アッセトを取得するためのクラス	--------------------------------------------------*/	public class AssetManager {				/*--------------------------------------------------		* スタティック変数		--------------------------------------------------*/		private static var _assets:Object = {};				/*--------------------------------------------------		* コンストラクタ		--------------------------------------------------*/		public function AssetManager() {			throw("Can't create instance of this class.");		}				/*--------------------------------------------------		* 追加		--------------------------------------------------*/		public static function add( i_key:String, i_asset:* ):void {			_assets[i_key] = i_asset;		}				/*--------------------------------------------------		* 取得		--------------------------------------------------*/		public static function get( i_key:String ):* {						if ( _assets.hasOwnProperty( i_key ) ) return _assets[i_key];						var c:Class;			var instance:*;						c = ApplicationDomain.currentDomain.getDefinition( i_key ) as Class;			if ( c ) {				if ( getQualifiedSuperclassName(c) == "flash.display::BitmapData" ) instance = new c(1,1);				else instance = new c();				_assets[i_key] = instance;				return instance;			}						return null;		}			}}